<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		title="{resourceManager.getString('bundlestate', 'framework.host.title', [bundleStatePM.connectionModel.host])}">
	<fx:Metadata>
		[ResourceBundle("bundlestate")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.fornacif.osgimanager.application.service.BundleStateService;
			import com.fornacif.osgimanager.bundlestate.pm.BundleStatePM;

			[Inject]
			[Bindable]
			public var bundleStatePM:BundleStatePM;
		]]>
	</fx:Script>
	
	<s:Group width="100%"
			 height="100%">
		<s:layout>
			<s:VerticalLayout gap="1"/>
		</s:layout>
		<s:Label width="100%" 
				 styleName="frameworkInfo"
				 text="{resourceManager.getString('bundlestate', 'framework.bundles.label', [bundleStatePM.bundleStateModel.bundles.length])}"/>
		<s:List dataProvider="{bundleStatePM.bundleStateModel.bundles}" 
				width="100%" 
				height="100%"
				itemRenderer="com.fornacif.osgimanager.bundlestate.view.BundleItemRenderer">
		</s:List>
		<s:Label width="100%"
				 styleName="frameworkInfo"
				 text="{resourceManager.getString('bundlestate', 'framework.version.label', [bundleStatePM.frameworkVersionModel.value.info.vendor, 
				                                                                             bundleStatePM.frameworkVersionModel.value.info.product, 
				                                                                             bundleStatePM.frameworkVersionModel.value.info.version])}"/>
	</s:Group>
</s:View>
